<!-- START FENIX CONFIGURATION CODE-->
 <style>
   .product-details{
   display:none;
   }
        
   .fenix-fixd-delivery-cart {
    text-align: right;
    margin-bottom: 10px;
    margin-left:-5% !important;
}
   
  @media screen and (min-width: 1200px) {
  .fenix-fixd-delivery-cart {
    font-size: 14px;
  }
}
  
   @media screen and (max-width: 480px) {
  .fenix-fixd-delivery-cart {
    font-size: 13px;
  }
}
     @media screen and (max-width: 360px) {
  .fenix-fixd-delivery-cart {
    font-size: 10px;
  }
}
   .fenix-fixd-delivery-cart strong{
    font-weight:bold;
}
   
   
   .fenix-fixd-delivery-cart svg{
   	width:24px;
   }
  
</style>

<script>
   FenixDeliveryEstimates({
    page: 'cart',
    cartItems: {{ cart.items | json}},
    shop: "{{shop.permanent_domain}}",
    template: "{{template}}",
    fenixMessageStyles: {
    fontSize: '14px',
    messageHighlightColor: '#ed7bd1',
    changeZipTextColor:'#ed7bd1'
  }
 });
  
 
  
  
        $( document ).ajaxComplete(function( event, xhr, settings ) {
            if ( settings.url === "https://delest-api.fenixcommerce.com/fenixdelest/api/v2/deliveryestimates" ) {
                if( $(".fenix-fixd-delivery-cart").text() == "" ||  $("#fenix-message-left").text().length == 0 ){
                      $(".fenix-fixd-delivery-cart").hide();
                }else{
                  $(".fenix-fixd-delivery-cart").show();
                }
            } 
         
          
          });

              </script>
          <!--END FENIX CONFIGURATION CODE-->
